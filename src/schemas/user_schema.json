                    "type": "string"

                }
            }
        },
        "todosResponse": {
            "type": "object",
            "properties": {
                "statusCode": {
                    "type": "integer",
                    "example": 200  
                },
                "message":{
                    "type": "string",
                    "example": "Successful operation"
                } ,
                "data": {
                    "type": "object",
                    "$ref": "#/definitions/addUser"  
                }
            }
            
        },

        "Task": {
            "type": "object",
            "properties": {
               
            }
        }
    }
